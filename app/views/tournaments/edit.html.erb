<h1>Editing tournament</h1>

<%= simple_form_for(@tournament) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs p-2">
    <div class="card">
      <%= f.association :fencers, collection: @fencers, as: :check_boxes, include_blank: false, checked: [@fencers.first], label: false %>
    </div>  
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this tournament", @tournament %> |
  <%= link_to "Back to tournaments", tournaments_path %>
</div>
