<div class="container pt-4">
    <table class="table">
    <thead>
        <tr>
        <th scope="col"></th>
        <th scope="col">Fencer</th>
        <th scope="col">Wins</th>
        <th scope="col">Losses</th>
        <th scope="col">Ratio</th>
        <th scope="col">Indicator</th>
        </tr>
    </thead>
    <tbody>
        <% @indicator_order.each_with_index do | fencer_details, index | %>
            <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= fencer_details[0] %></td>
                <td><%= fencer_details[1][0] %></td>
                <td><%= fencer_details[1][1] %></td>
                <td><%= '%.2f' % fencer_details[1][2] %></td>
                <td><% if fencer_details[1][3] > 0 %>
                        <% plus = "+" %>
                        <%= plus %>
                    <% end %>
                    <%=fencer_details[1][3] %></td>
            </tr>
        <% end %>
    </tbody>
    </table>
</div>